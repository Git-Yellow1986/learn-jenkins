pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Hello World'
            }
        }
    }
        stage('Test') {
            steps {
                echo 'Welcome to India'
         }
    }
           stage('Deploy') {
            steps {
                echo 'Pipeline'
            }
        }
}
